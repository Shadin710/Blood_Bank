.container
  .row.profile
    .col-md-3
      .profile-sidebar
        // SIDEBAR USERPIC
        .profile-userpic
          img.img-responsive(src='https://static.change.org/profile-img/default-user-profile.svg' alt='')
        // END SIDEBAR USERPIC
        // SIDEBAR USER TITLE
        .profile-usertitle
          .profile-usertitle-name
            | #{data.name}
          .profile-usertitle-job
            | Blood: B+
        // END SIDEBAR USER TITLE
        // SIDEBAR BUTTONS
        .profile-userbuttons
          button.btn.btn-success.btn-sm(type='button') Message
          button.btn.btn-danger.btn-sm(type='button') Request
        // END SIDEBAR BUTTONS
        // SIDEBAR MENU
        .profile-usermenu
          ul.nav
            li.active
              a(href='#')
                i.glyphicon.glyphicon-home
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;Overview
            li
              a(href='#')
                i.glyphicon.glyphicon-user
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;Account Settings
            li
              a(href='#' target='_blank')
                i.glyphicon.glyphicon-ok
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;Tasks
            li
              a(href='#')
                i.glyphicon.glyphicon-flag
                | &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;&#x9;Help
        // END MENU
