.container
  .row.profile
  each client in result
    .col-md-3
      .profile-sidebar
        // SIDEBAR USERPIC
        .profile-userpic
          img.img-responsive(src='https://static.change.org/profile-img/default-user-profile.svg' alt='')
        // END SIDEBAR USERPIC
        // SIDEBAR USER TITLE
        .profile-usertitle
          .profile-usertitle-name
            | #{client.username}
          .profile-usertitle-job
            | Blood: #{client.bloodgroup}
        // END SIDEBAR USER TITLE
        // SIDEBAR BUTTONS
        .profile-userbuttons
          a(href=`/login//`+client.username)
            button.btn.btn-success.btn-sm(type='button') Request
        // END SIDEBAR BUTTONS
        // SIDEBAR MENU
        // END MENU 1
   
